<div class="panel panel-default">
    <div class="panel-heading">
        <h4><%= I18n.t('cama_autocomplete.views.admin.settings.panel_title') %></h4>
    </div>
    <div class="panel-body">
        <%= form_tag(url_for(action: :save_settings), class: 'validate') do %>
            <div class="form-group">
                <label><%= I18n.t('cama_autocomplete.views.admin.settings.option_label') %></label>
                <%= text_field_tag 'options[autocomplete_setting]', @plugin.get_option('autocomplete_setting'), class: 'form-control required' %>
            </div>
            <div class="form-group">
                <label><%= I18n.t('cama_autocomplete.views.admin.settings.meta_label') %></label>
                <%= text_field_tag 'metas[autocomplete_setting]', @plugin.get_meta('autocomplete_setting'), class: 'form-control required' %>
            </div>
            <%= render partial: "camaleon_cms/admin/settings/custom_fields/render", locals: {record: @plugin, field_groups: @plugin.get_field_groups} %>
            <div class="form-group text-right">
                <%= submit_tag I18n.t('cama_autocomplete.views.admin.settings.save_settings'), class: 'btn btn-primary' %>
            </div>
        <% end %>
    </div>
</div>